{
 ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
 ;; Example without dates and calendar.
 ;; Durations only.
 ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
 :project-scale :daily

 :tasks         [{:name             "task1"
                  :alias            :t1
                  :days-lasts       10
                  :percent-complete 100}

                 {:name             "task2"
                  :alias            :t2
                  :days-lasts       10
                  :percent-complete 34
                  :starts-after     :t1}

                 {:separator "Stage1"}

                 {:name             "task3"
                  :alias            :t3
                  :days-lasts       10
                  :percent-complete 0
                  :starts-after     :t2
                  :color            "Gold/Black"}

                 {:name              "task4"
                  :alias             :t4
                  :days-lasts        3
                  :percent-complete  0
                  :starts-before-end [:t2 5]
                  :color             "Gold/Black"}

                 {:name             "task5"
                  :alias            :t5
                  :days-lasts       4
                  :percent-complete 0
                  :starts-after-end [:t2 3]
                  :color            "Gold/Black"}

                 ]

 :milestones    [{:name          "m1"
                  :happens-after [:t1]}

                 {:name          "m2"
                  :happens-after [:t2 :t3]}]
 }
