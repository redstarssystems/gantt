{
 :mvn/repos {"clojars" {:url "https://repo.clojars.org/"}
             "central" {:url "https://repo1.maven.org/maven2/"}}

 :paths     ["src" "resources" "target/classes" #_"java/src"]

 :deps      {org.clojure/clojure                       {:mvn/version "1.10.3"}
             org.clojure/test.check                    {:mvn/version "1.1.0"}

             ;; spec
             metosin/malli                             {:mvn/version "0.5.1"}

             ;;logging
             io.pedestal/pedestal.log                  {:mvn/version "0.5.8"}
             org.apache.logging.log4j/log4j-core       {:mvn/version "2.14.0"}
             org.apache.logging.log4j/log4j-slf4j-impl {:mvn/version "2.14.0"}
             }

 :aliases   {
             :run      {:extra-paths ["resources"]
                        :jvm-opts    ["-DLOG4J_CONFIGURATION_FILE=resources/log4j2.xml"
                                      "-Duser.timezone=UTC"]
                        :main-opts   ["--main" "org.rssys.gantt.core"]}

             :repl     {:extra-deps  {nrepl/nrepl          {:mvn/version "0.8.3"}
                                      healthsamurai/matcho {:mvn/version "0.3.7"}
                                      criterium/criterium  {:mvn/version "0.4.6"}
                                      babashka/fs          {:mvn/version "0.0.5"}
                                      hashp/hashp          {:mvn/version "0.2.1"}}
                        :extra-paths ["dev/src" "resources" "test" "test/resources"]
                        :jvm-opts    []
                        :main-opts   ["--main" "nrepl.cmdline"]}

             :test     {:extra-deps  {org.clojure/test.check        {:mvn/version "1.1.0"}
                                      healthsamurai/matcho          {:mvn/version "0.3.7"}
                                      babashka/fs                   {:mvn/version "0.0.5"}
                                      lambdaisland/kaocha           {:mvn/version "1.0.829"}
                                      lambdaisland/kaocha-cloverage {:mvn/version "1.0.75"}}
                        :extra-paths ["resources" "test" "test/resources"]
                        :jvm-opts    []
                        :main-opts   ["--main" "kaocha.runner"]}

             :jar      {:replace-deps {com.github.seancorfield/depstar {:mvn/version "2.0.216"}}
                        :exec-fn      hf.depstar/jar
                        :exec-args    {:jar        "gantt.jar"
                                       :aot        true
                                       :exclude    [".*org.rssys.gantt.*\\.clj" ".*\\.java"]
                                       :main-class "org.rssys.gantt.core"
                                       :sync-pom   true
                                       :compile-ns [:all]}}

             :uberjar  {:replace-deps {com.github.seancorfield/depstar {:mvn/version "2.0.216"}}
                        :exec-fn      hf.depstar/uberjar
                        :exec-args    {:jar        "gantt.jar"
                                       :aot        true
                                       :exclude    [".*org.rssys.gantt.*\\.clj" ".*\\.java"]
                                       :main-class "org.rssys.gantt.core"
                                       :sync-pom   true
                                       :compile-ns [:all]}}

             :install  {:replace-deps {slipset/deps-deploy {:mvn/version "0.1.5"}}
                        :exec-fn      deps-deploy.deps-deploy/deploy
                        :exec-args    {:installer :local :artifact "gantt.jar"}}


             :outdated {:extra-deps {com.github.liquidz/antq {:mvn/version "0.13.0"}}
                        :main-opts  ["-m" "antq.core"]}

             }
 }
